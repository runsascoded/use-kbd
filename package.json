{
  "name": "@rdub/use-hotkeys",
  "version": "0.2.1",
  "description": "Keyboard shortcuts with runtime-editable keybindings and capture UI",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./src/styles.css"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src"
  },
  "keywords": [
    "hotkeys",
    "keyboard",
    "shortcuts",
    "keybindings",
    "react",
    "hooks",
    "typescript"
  ],
  "author": "Ryan Williams",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/runsascoded/use-hotkeys"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
